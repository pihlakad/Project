                       @Html.TextBoxFor(x => x.PowerList1[4], new { style = "width:50px" })
            </div>
        </div>
        <div class="form-inline" style="overflow: auto">
            <h4> <label class="control-label labels">Second Unit:</label></h4>
            <div class="textings" id="SixthUnit">
