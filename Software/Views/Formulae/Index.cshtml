@using Software.ViewModel
@model FormulaeViewModel

<script src="~/Scripts/ShowItems.js"></script>
    <style>
.textings {
        float: left;
        margin: 5px 2px 10px 0;
    }

   
    </style>
<h1>Formulaes</h1>

@using (Html.BeginForm("Result", "Formulae", FormMethod.Post))
{
    <body onload="ShowGeneratorElements()">
        <div class="btn btn-primary" onclick="ShowUnits()" style="color: black">
            Select Number of Units for First Formula:
            @Html.DropDownListFor(t => t.NumberOfUnits1,
            new SelectList(HtmlLists.Numbers, "numberName"),
            new { id = "UnitDropDown" })
        </div>

        <div class="btn btn-primary" onclick="ShowUnits2()" style="color: black">
            Select Number of Units for Second Formula:
            @Html.DropDownListFor(t => t.NumberOfUnits2,
            new SelectList(HtmlLists.Numbers, "numberName"),
            new { id = "UnitDropDown2" })
        </div>

        <div class="btn btn-primary" onclick="ShowInputElement()" style="color: black">
            Select Operation:
            @Html.DropDownListFor(t => t.SelectedOperation,
            new SelectList(HtmlLists.SimpleOperations, "operationName"),
            new { id = "SimpleOperationDropDown" })
        </div>
        <div>
            First Measure:
            <input type="text" class="form-control"
                   @Html.TextBoxFor(x => x.MeasureList[0])
                   Second Measure
            <input type="text" class="form-control"
                   @Html.TextBoxFor(x => x.MeasureList[1])
        </div>
        <div class="form-inline" style="overflow: auto">
            <h4> <label class="control-label labels">First Unit:</label></h4>
            <div class="textings" id="FirstUnit">
                <input type="text" class="form-control"
                       @Html.TextBoxFor(x => x.UnitList1[0], new { style = "width:50px" })
                       ^
                <input type="text" class="form-control"
                       @Html.TextBoxFor(x => x.PowerList1[0], new { style = "width:50px" })
            </div>
            <div class="textings" id="SecondUnit">
